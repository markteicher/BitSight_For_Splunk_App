#
# Example Bitsight Input Configuration
# Copy this file to inputs.conf and configure your API token
#
# To enable:
# 1. Copy this file: cp inputs.conf.example inputs.conf
# 2. Replace YOUR_BITSIGHT_API_TOKEN_HERE with your actual API token
# 3. Restart Splunk: $SPLUNK_HOME/bin/splunk restart
#

[bitsight://portfolio]
api_token = YOUR_BITSIGHT_API_TOKEN_HERE
interval = 3600
index = main
disabled = 0
endpoint = portfolio

